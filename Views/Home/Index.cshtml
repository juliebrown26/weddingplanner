@model User
<div class="container">
    <div class="row">
        <div class="col">
            <div class="row" style="text-align: center; margin: 20px">
                <h1>Register</h1>
            </div>
            <form asp-action="RegisterUser" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="FirstName"></span><br>
                    <label asp-for="FirstName"></label>
                    <input class="form-control" asp-for="FirstName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="LastName"></span><br>
                    <label asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email"></span><br>
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span><br>
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Confirm"></span><br>
                    <label asp-for="Confirm"></label>
                    <input class="form-control" asp-for="Confirm">
                </div>
                <button class="btn btn-primary">Register!</button>
            </form>
        </div>
        <div class="col">
            <div class="row" style="text-align: center; margin: 20px">
                <h1>Login</h1>
            </div>
            <form asp-action="Login" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="Email"></span><br>
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span><br>
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password">
                </div>
                <button class="btn btn-success">Login!</button>
            </form>
        </div>
    </div>
</div>
